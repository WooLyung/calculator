<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_clear"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#ffff0000"
            android:textSize="30dp"
            style="@style/button"/>
        <!--초기화하는 버튼 -->

        <Button
            android:id="@+id/button_bracketL"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="("
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_bracketR"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=")"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_PI"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="π"
            android:textSize="30dp"
            style="@style/button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_squared"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="^"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_root"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="√"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_backspace"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="←"
            android:textStyle="bold"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_divison"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="30dp"
            style="@style/button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_seven"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_eight"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_nine"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30dp"
            style="@style/button"/>

        <Button
            android:id="@+id/button_multiply"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="×"
            android:textSize="30dp"
            style="@style/button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_four"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_five"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_six"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_minus"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"
            style="@style/button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_one"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_two"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_three"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_plus"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp"
            style="@style/button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_zerozero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_dot"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="30dp"
            style="@style/button"/>
        <Button
            android:id="@+id/button_equals"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="="
            android:textSize="30dp"
            style="@style/button"/>
    </LinearLayout>
</LinearLayout>